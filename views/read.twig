{% extends 'layout.twig' %}

{% block content %}
	<div class="post">
		<h1>{{ post.title }}</h1>
		<div class="content">{{ post.content }}</div>
	</div>

	{% if comments is not empty %}
		<div class="comment-list">
			{% for comment in comments %}
				<div class="comment-container">
					<div class="comment">{{ comment.comment }}</div>
					<div class="email">-- {{ comment.email|default('anonymous') }}</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}

	{% include 'comment-form.twig' with {'post_id': post.post_id} %}
{% endblock content %}
